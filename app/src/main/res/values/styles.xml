<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AuthHeader" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">#161826</item>
        <item name="fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="AuthFields" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">#7B7B7B</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">290dp</item>
    </style>

    <style name="AuthButtons" parent="Widget.AppCompat.Button">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_width">290dp</item>
    </style>

    <style name="AuthHaveAccountText" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="AuthAltSignUpOptionsText" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>